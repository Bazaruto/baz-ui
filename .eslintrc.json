{
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "react"
  ],
  "env": {
    "es6":     true,
    "browser": true,
    "node":    true,
    "mocha":   true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "rules": {
    "react/prop-types": "warn",
    "react/react-in-jsx-scope": "off"
  },
  "globals": {
    "Honeybadger": true
  }
}
